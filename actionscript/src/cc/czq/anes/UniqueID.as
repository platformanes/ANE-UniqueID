package cc.czq.anes{	import flash.events.EventDispatcher;	import flash.events.StatusEvent;	import flash.external.ExtensionContext;
			//	[Event(name="status", type="flash.events.StatusEvent")]	/**	 * 获取设备的唯一ID 	 * @author czq	 * 	 */		public class UniqueID	{		private static var _extContext:ExtensionContext;				private static var EXTENSION_ID:String = 'cc.czq.anes.uniqueid';				//与java端中Map里的key一致		private static const FgetMacAddress:String = "getMacAddress";		private static const FgetIDFA:String = "getIDFA";		private static const FgetUDID:String = "getUDID";		public function UniqueID()		{					}				private static var _instance:UniqueID;				private static function getInstance():UniqueID		{			if (!_instance)			{				_instance = new UniqueID();				_extContext=ExtensionContext.createExtensionContext(EXTENSION_ID, null);//				_extContext.addEventListener(StatusEvent.STATUS, onStatus);				if (!_extContext)				{//					trace("extension.xml出错啦！！！！请对应上EXTENSION_ID是否与extenion.xml里的id想同");				}				else				{//					trace(EXTENSION_ID, " extension creation complete");				}			}			return _instance;		}				/*private static function onStatus(e:StatusEvent):void		{			_instance.dispatchEvent(e);		}*/				/**		 * 获取MAC地址，在ios7以上会返回固定值 		 * @return 		 * 		 */				public static function getMacAddress():String		{			getInstance();			if (_extContext){				return _extContext.call(FgetMacAddress) as String;			}else			{				return "";			}		}				/**		 * 获取IDFA地址，在ios6以下会返回"" 		 * @return 		 * 		 */				public static function getIDFA():String		{			getInstance();			if (_extContext){				return _extContext.call(FgetIDFA) as String;			}else			{				return "";			}		}				/**		 * 获取OpenUDID 		 * @return 		 * 		 */				/*public static function getOpenUDID():String		{			getInstance();			if (_extContext){				return _extContext.call(FgetUDID) as String;			}else			{				return "";			}		}*/	}}